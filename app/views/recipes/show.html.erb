<h1><%= @recipe.title %></h1>

<%= image_tag 'star.png' if @recipe.featured? %>

<h3>Detalhes</h3>
<p><%= @recipe.recipe_type.name %></p>
<p><%= @recipe.cuisine.name %></p>
<p><%= @recipe.difficulty %></p>
<p><%= @recipe.show_cook_time %></p>
<h3>Ingredientes</h3>
<p><%= @recipe.ingredients %></p>
<h3>Como Preparar</h3>
<p><%= @recipe.method %></p>

<%= link_to 'Editar', edit_recipe_path(@recipe) %>
<%= link_to 'Excluir', @recipe, {method: :delete} %>
<%= link_to 'Voltar', root_path %>
