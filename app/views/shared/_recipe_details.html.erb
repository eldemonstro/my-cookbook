<% @recipes.each do |recipe| %>
  <%= image_tag 'star.png' if recipe.featured? %>
  <h1><%= link_to recipe.title, recipe %></h1>
  <ul class="list-group">
    <li class="list-group-item"><%= recipe.recipe_type.name %></li>
    <li class="list-group-item"><%= recipe.cuisine.name %></li>
    <li class="list-group-item"><%= recipe.difficulty %></li>
    <li class="list-group-item"><%= recipe.show_cook_time %></li>
  </ul>
<% end %>
