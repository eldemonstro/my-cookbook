<% if @recipe_type.errors.any? %>
  <% @recipe_type.errors.full_messages.each do |msg| %>
    <%= msg %>
  <% end %>
<% end %>

<%= form_for(@recipe_type) do |f| %>
  <div class="form-group">
    <%= f.label :name, 'Nome' %>
    <%= f.text_field :name, class: 'form-control'%>
  </div>

  <%= f.submit 'Enviar', class: 'btn btn-primary' %>
<% end %>
